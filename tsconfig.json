{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noImplicitAny": false,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./src",
		"removeComments": true,
		"noUnusedLocals": true,
		"allowJs": true,
		"checkJs": true,
		"paths": {
			"@/*": ["*"]
		}
	},
	"include": ["src", "tests"]
}
